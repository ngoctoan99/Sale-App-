<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp">
    <RelativeLayout
        android:id="@+id/rc_giaodich"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvhistory1"
            android:text="Mã đơn hàng : "
            android:layout_marginLeft="8dp"
            android:textSize="15dp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:id="@+id/tvmadon_donggiaodich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDSDSDSDSDRFFDF"
            android:textSize="15dp"
            android:textColor="@color/teal_200"
            android:layout_toRightOf="@+id/tvhistory1"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_below="@+id/tvhistory1"
            android:id="@id/spacer3"></View>
        <ImageView
            android:id="@+id/imagesp_giaodich"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            android:layout_below="@+id/spacer3"></ImageView>
        <TextView
            android:id="@+id/tvtenspdonggiaodich"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tên sản phẩm"
            android:layout_below="@+id/spacer3"
            android:layout_toRightOf="@+id/imagesp_giaodich"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/tvdong1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Số lượng : "
            android:layout_toRightOf="@+id/imagesp_giaodich"
            android:layout_below="@+id/tvtenspdonggiaodich"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/tvslspdonggiaodich"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2"
            android:layout_toRightOf="@+id/tvdong1"
            android:layout_below="@+id/tvtenspdonggiaodich"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/tvgiaspdonggiaodich"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="20000000 Đ "
            android:layout_toRightOf="@+id/imagesp_giaodich"
            android:layout_below="@+id/tvslspdonggiaodich"
            android:textColor="#EA0909"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/tvtrangthaidonggiaodich"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Đã gửi yêu cầu"
            android:layout_below="@id/tvhistory1"
            android:layout_alignParentRight="true"
            android:textColor="@color/teal_200"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/tvhistory2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ngày đặt"
            android:layout_below="@id/tvgiaspdonggiaodich"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imagesp_giaodich"
            android:textSize="10dp"></TextView>
        <TextView
            android:id="@+id/tvngaydatdonggiaodich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Wed Nov 03 09:01:40 GMT+07:00 2021"
            android:layout_below="@id/tvgiaspdonggiaodich"
            android:layout_toRightOf="@+id/tvhistory2"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
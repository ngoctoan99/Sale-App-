<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_search"
        android:src="@drawable/common_google_signin_btn_icon_light"
        android:layout_marginTop="10dp"></ImageView>
    <TextView
        android:id="@+id/tv_tensearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/image_search"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/tv_giasearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá"
        android:textColor="#E60909"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/image_search"
        android:layout_below="@+id/tv_tensearch"
        android:layout_marginTop="5dp"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/image_search"
        android:background="#212121"></View>
</RelativeLayout>
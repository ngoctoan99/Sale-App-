<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduct.DetailProductFragment"
    android:background="@drawable/custom_mh_color">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/common_google_signin_btn_icon_light"
                android:id="@+id/imagesp_detail"
                android:layout_marginBottom="20dp"></ImageView>
            <TextView
                android:id="@+id/tvten_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_below="@+id/imagesp_detail"></TextView>
            <TextView
                android:id="@+id/tv_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Giá :"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_below="@+id/tvten_detail"></TextView>
            <TextView
                android:id="@+id/tvgia_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2222"
                android:layout_toRightOf="@+id/tv_detail1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_below="@+id/tvten_detail"></TextView>

            <Button
                android:id="@+id/btnaddsp"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_detail1"
                android:layout_marginTop="10dp"
                android:background="@drawable/custombutton"
                android:text="  mua  "
                android:textColor="@color/white"
                android:textSize="15dp"
                android:backgroundTint="@null"
                app:backgroundTint="@null"></Button>
            <TextView
                android:id="@+id/tv_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm :"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/btnaddsp"
                android:textSize="25dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_detail2"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:id="@+id/tvmota_detail"></TextView>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
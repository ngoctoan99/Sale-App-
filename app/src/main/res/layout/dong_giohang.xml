<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/imagesp_cart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/common_google_signin_btn_icon_dark"></ImageView>
            <ImageView
                android:id="@+id/remove_cart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_below="@+id/imagesp_cart"
                android:layout_centerInParent="true"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvtensp_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/tvgiasp_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giá"
                android:textColor="#EA1010"
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvtensp_cart"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/minus_sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/minus"></ImageView>
            <TextView
                android:id="@+id/tvsl_cart"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="1"
                android:gravity="center_horizontal"
                android:layout_below="@+id/minus_sp"
                android:textSize="17dp"></TextView>
            <ImageView
                android:id="@+id/plus_sp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus"
                android:layout_below="@+id/tvsl_cart"></ImageView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>